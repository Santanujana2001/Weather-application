<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerlinks}}
</head>

<body>
    <!-- <h1>Welcome To The Static Web</h1>
    <button class="btn btn-danger"></button> -->
    {{>navbar}}
    <!-- header part -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
               <div class="main_content">
                   <form class="temp_form">
                       <input type="text" id="cityname" placeholder="Enter Your City Name" autocomplete="off">
                       <input type="submit" value="search" id="submitBtn">
                   </form>
               </div>

               <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day">Day</p>
                        <p id="today_data">Date</p>
                    </div>
                    <div class="main_layer">
                       <p id="city_name">Get Output Here</p>
                       <div class="middle_layer data_hide">
                        <p id="temp"><span id="temp_real_val">0</span> <sup>o</sup>C</p>
                        <p id="temp_status"> <i class="fa fa-cloud" aria-hidden="true"></i> </p>
                       </div>
                    </div>
               </div>
            </div>
        </div>
    </div>
    <!-- footer section -->
    {{>footer}}
    <script src="js/main.js"></script>
    <script>
        const getCurrentDay= () => {
            let weekday=new Array(7);
            weekday[0]="Sunday";
            weekday[1]="Monday";
            weekday[2]="Tuesday";
            weekday[3]="Wednesday";
            weekday[4]="Thursday";
            weekday[5]="Friday";
            weekday[6]="Saturday";
            
            let currentTime=new Date();
            let days=weekday[currentTime.getDay()];
            let day=document.getElementById('day');
            day.innerText=days;
        };
        getCurrentDay();

        let a;
        let date;
        let time;
        const years ={ weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
        setInterval(() => {
            a=new Date();
            date=a.toLocaleDateString(undefined,years);
            time=a.getHours()+':'+a.getMinutes()+':'+a.getSeconds();
            document.getElementById('today_data').innerHTML="Time Now : "+time+"<br> On " + date;
        }, 1000);
    </script>
</body>

</html>